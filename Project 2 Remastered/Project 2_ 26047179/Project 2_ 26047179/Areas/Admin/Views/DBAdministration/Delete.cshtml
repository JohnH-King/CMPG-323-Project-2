@model Project_2__26047179.Models.Employee

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h2 class="text-info">Delete Employee Confirm</h2>
<br />

<form method="post" asp-action="Delete">
    <div class="border" style="background-color: lightcyan; padding:10px;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="EmployeeNumber" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="EmployeeNumber" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton" model="Model.Id" />
            </div>
        </div>
    </div>
</form>