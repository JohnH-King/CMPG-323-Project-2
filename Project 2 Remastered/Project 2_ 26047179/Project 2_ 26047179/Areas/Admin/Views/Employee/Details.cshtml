@model Project_2__26047179.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<br />
<br />
<h2 class="text-info">Employee Details</h2>
<br />

<form method="post" asp-action="Details">
    <div class="border" style="background-color: lightcyan; padding:10px;">
        <div class="form-group col" style="padding:10px;">
            <div class="row" style="width:100%">
                <label asp-for="EmployeeNumber" class="col-form-label"></label>
            
                    <input asp-for="EmployeeNumber" disabled class="form-control" />
                </div>

            <div class="col" style="width:100%">
                    <label asp-for="Department" class="col-form-label"></label>
                
                    <input asp-for="Department" class="form-control" />
            </div>

                <div class="col-2">
                    <label asp-for="EmployeeCount" class="col-form-label"></label>
               
                    <input asp-for="EmployeeCount" class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="EnvironmentSatisfaction" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="EnvironmentSatisfaction" class="form-control" />
                </div>

                <div class="col-1">
                    <label asp-for="Overtime" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Overtime" class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="PerformanceRating" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="PerformanceRating" class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="StockOptionLevel" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="StockOptionLevel" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5 offset-2">
                    <partial name="_DetailsAndBackToListButton" model="Model.Id" />
                </div>
            </div>
        </div>
</form>