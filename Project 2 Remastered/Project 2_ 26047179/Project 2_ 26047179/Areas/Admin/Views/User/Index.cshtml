@model IEnumerable<ApplicationUser>
@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<fieldset id="normalField">
    <div class="border" style="background-color: lightcyan; padding:10px;">
        <div class="row">
            <div class="col">
                <h2 class="text-info">User List</h2>
            </div>
            <div class="text-right" style="padding:20px;">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info"><i class="fas fa-plus"></i> &nbsp; New Employee Registration</a>
            </div>
        </div>
        <br />
        <div>
            @if (Model.Count() > 0)
            {
<table class="table table-striped border">
    <tr class="table-secondary">
        <th>
            @Html.DisplayNameFor(m => m.EmployeeNumber)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.UserRole)
        </th>

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(m => item.EmployeeNumber)
    </td>
    <td>
        @Html.DisplayFor(m => item.UserName)
    </td>
    <td>
        @Html.DisplayFor(m => item.UserRole)
    </td>


    <td>
        @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
        {
<a class="btn btn-success text-white" asp-action="Lock" asp-route-id="@item.Id">
    <i class="fas fa-lock-open"></i>
</a> }
else
{
<a class="btn btn-danger text-white" asp-action="UnLock" asp-route-id="@item.Id">
    <i class="fas fa-lock"></i>
</a>}
    </td>
</tr>
}
</table> }
else
{
<p>No User exists...</p>}
        </div>
    </div>
</fieldset>