@model Project_2__26047179.Models.ViewModels.JobInfoAndEmployeeViewModel
@using Project_2__26047179.Extensions
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />
<h1>Create Job Information</h1>
<br />

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="border" style="background-color: lightcyan; padding:10px; width:100%">
    <div class="col-8 border-right">
        <form asp-action="Create">
            <div class="border" style="background-color: lightcyan; padding:10px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="JobInfo.EmployeeId" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <select id="ddlEmployeeList" asp-for="JobInfo.EmployeeId" asp-items="Model.EmployeeList.ToSelectListItem(Model.JobInfo.EmployeeId)" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="JobInfo.EducationField" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="JobInfo.EducationField" class="form-control" />
                    </div>
                    <span asp-validation-for="JobInfo.EducationField" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-5 offset-3">
                        <partial name="_CreateAndBacktoListButton" />
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-3 offset-1">
        @if (Model.JobInfoList.Count() > 0)
        {
            <p> Existing Job Info: </p>

            <div id="JobInfoList">
                <ul class="list-group"></ul>
            </div>
        }
    </div>


</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function updateJobInfoList() {
            var employeeSelected = document.getElementById("ddlEmployeeList").value;

            $list = $('#JobInfoList');

            $.ajax({
                url: '/Admin/JobInfo/GetJobInfo/' + employeeSelected,
                type: 'GET',
                dataType: 'text',
                success: function (data) {
                    results = JSON.parse(data);
                    $list.html('');
                    $list.append(' <ul class="list-group"> ')
                    for (i in results) {
                        $list.append('<li class="list-group-item">' + results[i].text + '</li>');
                    }
                    $list.append('</ul>');
                }
            });
        }

        $(document).ready(function () {
            updateJobInfoList();
        });

        $("#ddlEmployeeList").on("change", function () {
            updateJobInfoList();
        });


    </script>

}
