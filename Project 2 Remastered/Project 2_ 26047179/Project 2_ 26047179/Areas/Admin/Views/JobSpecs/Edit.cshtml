@model Project_2__26047179.Models.ViewModels.JobSpecAndEmployeeViewModel
@using Project_2__26047179.Extensions
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />
<h1>Edit Job Specification</h1>
<br />

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="border" style="background-color: lightcyan; padding:10px;">
    <div class="col-8 border-right">
        <form asp-action="Edit">
            <input type="hidden" asp-for="JobSpecs.EmployeeId" /><!-- need the id inside the controller, gives Id to the controller-->
            <div class="border" style="background-color: lightcyan; padding:10px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="JobSpecs.EmployeeId" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <select id="ddlEmployeeList" asp-for="JobSpecs.EmployeeId" disabled asp-items="Model.EmployeeList.ToSelectListItem(Model.JobSpecs.EmployeeId)" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="JobSpecs.JobRole" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="JobSpecs.JobRole" class="form-control" />
                    </div>
                    <span asp-validation-for="JobSpecs.JobRole" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-5 offset-3">
                        <partial name="_EditAndBacktoListButton" model="Model.JobSpecs.Id"/>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-3 offset-1">
        @if (Model.JobSpecsList.Count() > 0)
        {
            <p> Existing Job Specs: </p>

            <div id="JobSpecList">
                <ul class="list-group"></ul>
            </div>
        }
    </div>


</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function updateJobRoleList() {
            var employeeSelected = document.getElementById("ddlEmployeeList").value;

            $list = $('#JobSpecList');

            $.ajax({
                url: '/Admin/JobSpecs/GetJobSpecs/' + employeeSelected,
                type: 'GET',
                dataType: 'text',
                success: function (data) {
                    results = JSON.parse(data);
                    $list.html('');
                    $list.append(' <ul class="list-group"> ')
                    for (i in results) {
                        $list.append('<li class="list-group-item">' + results[i].text + '</li>');
                    }
                    $list.append('</ul>');
                }
            });
        }

        $(document).ready(function () {
            updateJobRoleList();
        });

    </script>

}
