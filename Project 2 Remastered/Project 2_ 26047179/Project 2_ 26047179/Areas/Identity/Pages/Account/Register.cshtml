@page
@using Project_2__26047179.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.EmployeeNumber"></label>
                <input asp-for="Input.EmployeeNumber" class="form-control" />
                <span asp-validation-for="Input.EmployeeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserRole"></label>
                <input asp-for="Input.UserRole" class="form-control" />
                <span asp-validation-for="Input.UserRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">

                <div class="form-group">
                    <input type="radio" name="rdUserRole" value="@SD.NormalUser" checked /> @SD.NormalUser
                    <input type="radio" name="rdUserRole" value="@SD.ManagerUser" checked /> @SD.ManagerUser
                    <input type="radio" name="rdUserRole" value="@SD.SuperUser" checked /> @SD.SuperUser
                </div>
            </div>
            @if (User.IsInRole(SD.ManagerUser))
            {
        <div class="form-group">

            <div class="form-group">
                <input type="radio" name="rdUserRole" value="@SD.NormalUser" checked /> @SD.NormalUser
                <input type="radio" name="rdUserRole" value="@SD.ManagerUser" checked /> @SD.ManagerUser
                <input type="radio" name="rdUserRole" value="@SD.SuperUser" checked /> @SD.SuperUser
            </div>
        </div>            }

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
