@page
@using Project_2__26047179.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<fieldset id="logs">
    <h1 class="text-center"><u><b>@ViewData["Title"]</b></u></h1>

        <div >
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a new account.</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.EmployeeNumber"></label>
                    <input asp-for="Input.EmployeeNumber" class="form-control" />
                    <span asp-validation-for="Input.EmployeeNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.UserRole"></label>
                    <input asp-for="Input.UserRole" class="form-control" />
                    <span asp-validation-for="Input.UserRole" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">


                </div>
                @if (User.IsInRole(SD.ManagerUser))
                {

            <div class="form-group row">
                <div class="form-group col">
                    <input type="radio" style="margin:1px" name="rdUserRole" value="@SD.NormalUser" checked /> @SD.NormalUser
                </div>
                <div class="form-group col">
                    <input type="radio" style="margin: 1px" name="rdUserRole" value="@SD.ManagerUser" checked /> @SD.ManagerUser
                </div>
                <div class="form-group col">
                    <input type="radio" style="margin: 1px" name="rdUserRole" value="@SD.SuperUser" checked /> @SD.SuperUser
                </div></div>
                }

                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>

    </fieldset>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
